<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="eProdavnica.Pages.BookmarkPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Bookmark"
    x:Name="ThisPage">

    <CollectionView
        ItemsSource="{Binding Products}"
        Margin="10"
        EmptyView="Nema bookmark-iranih proizvoda.">

        <CollectionView.ItemsLayout>
            <GridItemsLayout Orientation="Vertical" Span="2" />
        </CollectionView.ItemsLayout>

        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame CornerRadius="6" HasShadow="True" Padding="8" Margin="5">
                    <StackLayout>
                        <Image
                            Source="{Binding ImageUrl}"
                            Aspect="AspectFill"
                            HeightRequest="100"
                            HorizontalOptions="Center" />
                        <Label
                            Text="{Binding Name}"
                            FontAttributes="Bold"
                            Margin="0,5,0,0"/>
                        <Label
                            Text="{Binding Description}"
                            LineBreakMode="TailTruncation"
                            MaxLines="2" />
                        <Button
                            Text="Detalji"
                            Command="{Binding Source={x:Reference ThisPage}, Path=ShowDetailsCommand}"
                            CommandParameter="{Binding .}"
                            HorizontalOptions="End"
                            Margin="0,5,0,0"/>
                    </StackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>

    </CollectionView>

</ContentPage>
