<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="eProdavnica.MainPage"
             Title="Početna Stranica">

    <ContentPage.Content>
        <VerticalStackLayout>
            <StackLayout Margin=" 15,25,25,0" >
                <StackLayout HorizontalOptions="FillAndExpand" Orientation="Horizontal" >
                    <Frame
                        Padding="0"
                        BackgroundColor="#F7F7F7"
                        CornerRadius="45"
                        HasShadow="False"
                        HeightRequest="40"
                        HorizontalOptions="FillAndExpand" >
                        <StackLayout Orientation="Horizontal" >
                            <SearchBar
                                Margin="20, 10, 0, 10"
                                FontSize="20"
                                FontAttributes="Bold"
                                HeightRequest="50"
                                Placeholder="Pretražite artikal" >
                                
                            </SearchBar>
                        </StackLayout>
                    </Frame>
                </StackLayout>
                <ScrollView Margin="15" VerticalScrollBarVisibility="Never" >
                    <StackLayout >
                        <StackLayout>
                            <StackLayout Margin="0, 5, 0, 5" >
                                <Label
                                FontAttributes="Bold"
                                FontSize="18"
                                Text="Kategorije artikala"
                                TextColor="Black" >
                                </Label>
                                <StackLayout
                                    Margin="0, 20, 0, 20"
                                    HeightRequest="90"
                                    Orientation="Horizontal">

                                    <CollectionView ItemsSource="{Binding ItemCategories,Mode=TwoWay}" >
                                        <CollectionView.ItemsLayout>
                                            <LinearItemsLayout ItemSpacing="10" Orientation="Horizontal" />
                                        </CollectionView.ItemsLayout>
                                        <CollectionView.ItemTemplate>
                                            <DataTemplate>
                                                <StackLayout>
                                                    <Frame
                                                        Margin="1,5,10,5"
                                                        Padding="0"
                                                        HasShadow="True"
                                                        HeightRequest="60"
                                                        WidthRequest="60"
                                                        IsClippedToBounds="False" >
                                                        <Image 
                                                            Margin="15"
                                                            Aspect="AspectFit"
                                                            HorizontalOptions="CenterAndExpand"
                                                            Source="{Binding Image}"
                                                            VerticalOptions="CenterAndExpand" />
                                                    </Frame>
                                                    <Label
                                                        FontSize="12"
                                                        HorizontalOptions="Center"
                                                        Text="{Binding Name}"
                                                        TextColor="Black" />
                                                </StackLayout>
                                            </DataTemplate>
                                        </CollectionView.ItemTemplate>
                                    </CollectionView>
                                  

                                </StackLayout>
                            </StackLayout>
                        </StackLayout>
                        <StackLayout Margin="0,10,0,10" >
                            <StackLayout Orientation="Horizontal">
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="18"
                                    HorizontalOptions="StartAndExpand"
                                    Text="Najbolje prodavani artikli"
                                    TextColor="Black" />
                                <StackLayout Margin="10,50,0,5" >
                                    <Label
                                        FontAttributes="Bold"
                                        FontSize="16"
                                        HorizontalOptions="EndAndExpand"
                                        Text="Pogledaj sve"
                                        TextColor="Black" />
                                    <StackLayout.GestureRecognizers >
                                        
                                    </StackLayout.GestureRecognizers>
                                </StackLayout>
                            </StackLayout>
                            <StackLayout HeightRequest="350" >
                                <CollectionView ItemsSource="{Binding BestSellingItems, Mode=TwoWay}" >
                                    <CollectionView.ItemsLayout>
                                        <LinearItemsLayout ItemSpacing="0" Orientation="Horizontal" />
                                    </CollectionView.ItemsLayout>
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate >
                                            <StackLayout Spacing="10" Margin="5" HorizontalOptions="CenterAndExpand" >
                                                <StackLayout>
                                                    <Frame
                                                        CornerRadius="5"
                                                        HasShadow="False"
                                                        HorizontalOptions="Center"
                                                        IsClippedToBounds="True" >
                                                        <Image 
                                                            Aspect="AspectFit"
                                                            HeightRequest="240"
                                                            Source="{Binding Image}"
                                                            WidthRequest="165" />
                                                    </Frame>
                                                </StackLayout>
                                                <StackLayout Margin="0,-10,0,0" >
                                                    <Label
                                                        FontSize="16"
                                                        HorizontalOptions="Center"
                                                        Text="{Binding Name}"
                                                        TextColor="Black"
                                                        VerticalOptions="Start" />
                                                    <Label
                                                        FontSize="12"
                                                        HorizontalOptions="Center"
                                                        Text="{Binding Brand}"
                                                        TextColor="#929292"
                                                        VerticalOptions="Start" />
                                                    <Label
                                                        FontSize="12"
                                                        HorizontalOptions="Center"
                                                        Text="{Binding Price}"
                                                        TextColor="#00c569"
                                                        VerticalOptions="Start" />
                                                </StackLayout>
                                                <StackLayout.GestureRecognizers>
                                                    
                                                </StackLayout.GestureRecognizers>
                                            </StackLayout>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>
                            </StackLayout> 
                        </StackLayout>
                    </StackLayout>
                </ScrollView>
            </StackLayout>
            
        </VerticalStackLayout>
    </ContentPage.Content>

</ContentPage>
